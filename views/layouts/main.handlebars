                    <input type="text" class="form-control" id="user" placeholder="Jane Doe"/>
                </div>
                 <div class="form-group">
                  <label for="zipcode">Zip Code</label>
                    <input type="text" class="form-control" id="zipcode" placeholder="00000"/>
                </div>
                <div class="form-group">
                  <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="user@mail.com"/>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password"/>
                </div>
                <div class="col-sm-12 well">
                  <div class="col-sm-2"></div>
                  <div class="col-sm-3">
                    <button type="submit" class="btn btn-lg btn-success" id="newUserBtn">Create User</button>
                  </div>
                  <div class="col-sm-2"></div>
                  <div class="col-sm-3">
                    <button class="btn btn-lg btn-danger" data-dismiss="modal" aria-hidden="true">Close</button>   
                  </div>
                  <div class="col-sm-2"></div>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
