{{!-- Zipcode Search Bar --}}

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="panel panel-primary text-center">
      <div class="panel-heading"><h4>Search NJ Zipcode Now</h4></div>
      <div class="panel-body">
        <form class="create-update-form">
          <div class="form-group">
            <label for="zipcode">ZipCode:</label>
            <input type="text" id="zipcode" name="zipcode">
            <button type="button" id="zipSubmit" class="btn btn-lg btn-success">Search</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>

<div class="row">
  <div class="col-sm-6">

    <div class="panel panel-primary text-center">
      <div class="panel-heading"><h4>Rep List</h4></div>
        <div class="panel-body">

          <div class="row1">
            <div class="col-md-7" style='text-align: left;'>

              {{#each repList}}
                  <p>ID: {{this.id}} | Rep Name: {{this.name}}</p>
              {{/each}}

            </div>
          </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">

    <div class="panel panel-primary text-center">
      <div class="panel-heading"><h4>Your Representative</h4></div>
        <div class="panel-body">

          <div class="row1">
            <div class="col-md-7 your-rep" style='text-align: left;'>
              <div class="rep-name"></div>
              <img class="rep-image" src="">
              <div class="rep-party"></div>
              <div class="rep-districtNum"></div>
              <div class="rep-phoneNum"></div>
               <div class="rep-url"></div>
            </div>
          </div>

    </div>
  </div>
</div>